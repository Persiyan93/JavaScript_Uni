            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>
        <div class="auth-buttons">
           <button type="submit">Start game</button>
        </div>
        </form>
        <h1>Quiz Game </h1>
        
    </section>
</section>




