{{>header}}
<div class="offer-details">
    <h1>{{model}}</h1>
    <div class="info">
        <img src="{{img}}" alt="">
        <div class="description">{{description}}
            <br>
            <br>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isAuthor}}
        <a action="#/edit{{id}}">Edit</a>
        <a>Delete</a>
        {{else}}
        <a>Buy</a>
        {{/if}}
        <span style="display: none;"  >You bought it</span>
    </div>
</div>
{{>footer}}